 office:version=\"1.2\"
 office:mimetype=\"application/vnd.oasis.opendocument.text\">

 <office:meta>
  <dc:title>$title</dc:title>
  <dc:description>$additional</dc:description>
  <meta:generator>source-highlight/3.1.4$GNU source-highlight</meta:generator>
